<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Test Song Title"
            android:textColor="@color/titleBrown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_explicit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@drawable/gray_explicit"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="@string/explicit"
                android:textColor="@color/backgroundBrown"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@drawable/green_download"
                android:gravity="center"
                android:text="@string/arrow_down"
                android:textColor="@color/downloadGreen"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Test Author"
                android:textColor="@color/explicitGray" />

            <TextView
                android:id="@+id/tv_single_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/single_dot"
                android:textColor="@color/explicitGray" />

            <TextView
                android:id="@+id/tv_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Test Album Name"
                android:textColor="@color/explicitGray" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_three_dots"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:text="@string/three_dots"
        android:textColor="@color/explicitGray"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>